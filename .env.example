# Paperless ML Integration - Environment Variables
# Copy this file to .env and fill in your values

# Paperless Instance Configuration
PAPERLESS_URL=http://your-paperless-instance:8000
PAPERLESS_API_TOKEN=your_paperless_api_token_here

# MongoDB Configuration (can be overridden in docker-compose.yml)
MONGO_URI=mongodb://mongodb:27017/
MONGO_DB=paperless_ml

# Processing Configuration
# Set to True for automatic processing, False for manual confirmation
AUTO_PROCESSING=False

# Maximum number of documents to process in a single run
MAX_DOCUMENTS=5

# Recipient Tags Configuration
# Comma-separated list of tag names for potential document recipients
RECIPIENT_TAGS=Max Mustermann,Maria Mustermann,Maxi Mustermann

# Security Configuration
# Set to True to disable SSL certificate verification (for custom CA setups)
# WARNING: Only use this with internal/trusted servers
DISABLE_SSL_VERIFY=False